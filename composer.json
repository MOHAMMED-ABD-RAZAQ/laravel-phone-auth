{
    "name": "your-vendor/laravel-phone-auth",
    "description": "A professional Laravel package for phone-based authentication with OTP verification, following clean architecture principles and Laravel best practices.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "authentication",
        "phone-auth",
        "otp",
        "sms",
        "password-reset",
        "api",
        "clean-architecture"
    ],
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com",
            "homepage": "https://github.com/your-username"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^9.0|^10.0|^11.0",
        "laravel/sanctum": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "orchestra/testbench": "^7.0|^8.0",
        "mockery/mockery": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Package\\Auth\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Package\\Auth\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Package\\Auth\\Providers\\AuthPackageServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
} 